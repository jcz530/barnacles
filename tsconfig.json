{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/frontend/*"],
      "@shared/*": ["./src/shared/*"],
      "@backend/*": ["./src/backend/*"],
      "@cli/*": ["./src/cli/*"],
      "@test/*": ["./src/test/*"]
    }
  },
  "exclude": [
    "src/frontend",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
